{
    "name": "phpsoftbox/orm",
    "description": "ORM component for the PhpSoftBox framework",
    "type": "library",
    "require": {
        "php": "^8.4",
        "phpsoftbox/collection": "^0.1.0@beta",
        "phpsoftbox/database": "^0.1.0@beta",
        "ramsey/uuid": "^4.7",
        "phpsoftbox/inflector": "^0.1.0@beta"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "PhpSoftBox\\Orm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpSoftBox\\Orm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "repositories": [
        { "type": "vcs", "url": "git@github.com:phpsoftbox/collection.git", "no-api": true },
        { "type": "vcs", "url": "git@github.com:phpsoftbox/database.git", "no-api": true },
        { "type": "vcs", "url": "git@github.com:phpsoftbox/inflector.git", "no-api": true }
    ]
}
